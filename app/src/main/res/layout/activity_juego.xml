<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#f2f2f2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txtJugador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jugador: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/txtIntento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intento 1 de 10"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/inputNumero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingresá un número de 4 cifras"
            android:inputType="number"
            android:maxLength="4"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnVerificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verificar"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnAyuda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🆘 Pedir Ayuda"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/txtResultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resultado: -"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- 📋 Lista de intentos anteriores -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historial de intentos:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:id="@+id/layoutHistorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"/>

        <Button
            android:id="@+id/btnReiniciar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔁 Reiniciar Partida"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnFinalizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🛑 Finalizar Partida"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnVolverMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔙 Volver al Menú"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>
